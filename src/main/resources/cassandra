-- Create a keyspace
CREATE KEYSPACE IF NOT EXISTS idtolu WITH REPLICATION = { 'class' : 'SimpleStrategy', 'replication_factor' : '2' };

-- Create a table
CREATE TABLE IF NOT EXISTS idtolu.fruit (
name UUID PRIMARY KEY,
name text,
description text
);

